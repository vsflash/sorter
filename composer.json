{
  "name": "vsflash/sorter",
  "description": "This library is designed to sorting arrays.",
  "keywords": ["library", "sort", "array"],
  "type": "library",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Vadim Selyan",
      "email": "vadimselyan@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2"
  },
  "autoload": {
    "psr-4": {
      "vsflash\\Sorter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "vsflash\\Sorter\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "friendsofphp/php-cs-fixer": "^2.13"
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix --allow-risky=yes"
  }
}
